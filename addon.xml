<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.glucotv" name="GlucoTV" version="0.0.4" provider-name="Matze1985">
	<requires>
		<import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">GlucoTV</summary>
		<description lang="en">Glucose Nightscout Addon for Kodi. Enable and run the addon, after each actually glucose update, a notification is sent.</description>
		<license></license>
		<language></language>
		<source>https://github.com/Matze1985/GlucoTV</source>
		<website>crazyinfo.de</website>
		<email>info@crazyinfo.de</email>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<news>v0.0.4 - Create Kodi plugin for glucose</news>
	</extension>
</addon>
